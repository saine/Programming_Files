 */
package lu.paulbertemes.sudokusolver;

/**
 * This class handles all the functionalities involved with the 
 * complete SudokuBoard
 * 
 * @author 	paulbertemes
 * @version 1.1
 */
public class SudokuBoard 
{
	//Member Fields
	
	private int[][] m_SudokuBoard;
	private int 	m_nWidth;
	
	//Constructor
	public SudokuBoard(int nSize, int[][] nValues)
	{
		//Allocate Board Space
		m_nWidth 		= nSize*nSize;
		m_SudokuBoard 	= new int[m_nWidth][m_nWidth];
		
		//Initialise Board with zero Values
		initBoard();
		
		//Initialize Board Values
		for(int i=0;i<nValues.length;i++)
		{
			int nInd1 					= nValues[i][0];
			int nInd2 					= nValues[i][1];
			m_SudokuBoard[nInd1][nInd2] = nValues[i][2];
		}
	}
	
	//Initialize Sudoku Board
	private void initBoard()
	{
		for(int i=0;i<m_nWidth;i++)
		{
			for(int j=0;j<m_nWidth;j++) m_SudokuBoard[i][j] = 0;
		}
	}
	
	//Print Sudoku Board
	public void printBoard()
	{
		for(int i=0;i<m_nWidth;i++)
		{
			for(int j=0;j<m_nWidth;j++)
			{
				System.out.print(" " + m_SudokuBoard[i][j]);
			}
			System.out.print("\n");
		}
	}
	
	public static void main(String[] args)
	{
		int[][] nValues = 
		{{0,0,4},{2,0,7},{1,1,8},{2,2,6},
		 {0,5,2},{1,3,1},{1,5,4},{2,4,8},
		 {0,6,8},{0,7,3},{1,8,2},{2,6,5},
		 
		 {3,0,1},{4,0,2},{4,1,7},{5,1,3},
		 {3,5,7},{4,3,5},{5,3,9},{5,4,4},
		 {3,7,5},{4,7,1},{4,8,9},{5,8,4},
		 
		 {0,0,4},{2,0,7},{1,1,8},{2,2,6},
		 {0,5,2},{1,3,1},{1,5,4},{2,4,8},
		 {0,6,8},{0,7,3},{1,8,2},{2,6,5}};
		
		SudokuBoard Board1 = new SudokuBoard(3, nValues);
		Board1.printBoard();
	}
}
