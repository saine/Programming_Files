//Package
package lu.paulbertemes.sudokusolver;

/**
 * This class handles all the functionalities involved with a single
 * field on a Sudoku board 
 * 
 * @author 	paulbertemes
 * @version 1.1
 */
public class SudokuField 
{
	int 	m_nValue;
	boolean m_bOccupied;
	
	//First Constructor
	public SudokuField()
	{
		m_nValue 	= 0;
		m_bOccupied = false;
	}
	
	//Second Constructor
	public SudokuField(int nValue)
	{
		//Member Fields
		m_nValue 	= nValue;
		m_bOccupied = true;
	}
	
	//Get Occupied Field
	public boolean getOccupied()
	{
		return(m_bOccupied);
	}
	
	//Get Field Value
	public int getValue()
	{
		return(m_nValue);
	}
	
	//Set Field Value
	public void setValue(int nValue)
	{
		m_nValue = nValue;
	}
}
