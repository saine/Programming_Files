package lu.paul.bertemes.nightcrawler;

import java.io.FileWriter;
import java.net.URL;
import java.util.Scanner;

/**
 * @author paulbertemes
 *
 */
public static class GetUrl {

	/**
	 * @param args
	 * @param args[0] -- hostname of the webite
	 * @param args[1] -- Port number
	 * @throws Exception 
	 */
	public GetUrl(URL url) throws Exception {
		
		//Variables
//		URL url 				= new URL("http://"+args[0]+":"+args[1]);
		Scanner urlScanner 		= new Scanner(url.openStream());
		FileWriter writeFile	= new FileWriter("crawled_index.html");
		
		//Read Content of the Website
		while(urlScanner.hasNext())
		{
			//Write into HTML File (Download page)
			writeFile.write(urlScanner.nextLine());
		}
	}
}